<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= @student.errors.count%>个错误:</h2>

      <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="student_num">学号</label>
    <%= f.text_field :num %>
  </div>
  <div class="field">
   <label for="student_:name">姓名</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label for="student_:sex">性别</label>
    <%= f.select(:sex,[["男","1"],["女","0"]])-%>
  </div>
  <div class="field">
    <label for="student_:avater">上传照片</label>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <label for="student_enter_tag">入学时间</label>
    <%= f.text_field :enter_tag %>
  </div>
  <div class="field">
    <label for="student_grade">年级</label>
    <%= f.select(:grade,grade_list) %>
    <label for="student_class_num">班别</label>
    <%= f.text_field :class_num,{:size=>"2"} %>
  </div>

  <div class="actions">
    <%= f.submit "确定" %>
  </div>
<% end %>
